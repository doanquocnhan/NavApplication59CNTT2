<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/confirmFragment2">
    <fragment
        android:id="@+id/listProductFragment"
        android:name="vn.edu.ntu.navapplication59cntt2.ListProductFragment"
        android:label="fragment_list_product"
        tools:layout="@layout/fragment_list_product" >
        <action
            android:id="@+id/action_listProductFragment_to_shoppingCartFragment"
            app:destination="@id/shoppingCartFragment" />
        <action
            android:id="@+id/action_listProductFragment_to_shoppingCartFragment2"
            app:destination="@id/shoppingCartFragment" />
        <action
            android:id="@+id/action_listProductFragment_to_productFragment"
            app:destination="@id/productFragment" />
    </fragment>
    <fragment
        android:id="@+id/productFragment"
        android:name="vn.edu.ntu.navapplication59cntt2.ProductFragment"
        android:label="fragment_product"
        tools:layout="@layout/fragment_product" />
    <fragment
        android:id="@+id/shoppingCartFragment"
        android:name="vn.edu.ntu.navapplication59cntt2.ShoppingCartFragment"
        android:label="fragment_shopping_cart"
        tools:layout="@layout/fragment_shopping_cart" >
        <action
            android:id="@+id/action_shoppingCartFragment_to_confirmFragment2"
            app:destination="@id/confirmFragment2"
            app:popUpTo="@id/shoppingCartFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/confirmFragment2"
        android:name="vn.edu.ntu.navapplication59cntt2.ConfirmFragment"
        android:label="fragment_confirm"
        tools:layout="@layout/fragment_confirm" />
</navigation>
